{
	"name": "alignargs",
	"displayName": "AlignArgs",
	"description": "Align arguments of single line function calls",
	"icon": "images/alignargsIcon.png",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:alignargs.alignargs"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "alignargs.alignargs",
				"title": "Align Args"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "alignargs.alignargs",
					"when": "editorHasSelection"
				}
			]
		},
		"configuration": {
			"title": "Align Args",
			"properties": {
				"alignargs.rightAlignDecimal": {
					"type": "boolean",
					"default": true,
					"description": "Right align decimal values"
				},
				"alignargs.formatHex": {
					"type": "boolean",
					"default": true,
					"description": "ex) 0XabU -> 0xABu"
				},
				"alignargs.padType": {
					"type": "string",
					"default": "space",
					"enum": [
						"space",
						"tab"
					],
					"description": "Pad with space(recommended) or tab(width 4. may not work properly)"
				},
				"alignargs.replaceArg": {
					"type": "object",
					"description": "Replace argument 'Item' -> 'Value'",
					"scope": "resource",
					"default": {
						"t": "TRUE",
						"T": "TRUE",
						"f": "FALSE",
						"F": "FALSE"
					},
					"additionalProperties": {
						"type": "string"
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.47.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.9.7",
		"vscode-test": "^1.3.0"
	},
	"publisher": "yongsooim",
	"repository": "https://github.com/YongsooIm/vscode-alignargs"
}
